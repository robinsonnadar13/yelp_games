<%- include("partials/header") %>
<br />
<div class="container">
	<h1>
		Add New Game
	</h1>
	<br />
<form action="/games" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" placeholder="e.g. PUBG" autofocus>
  </div>
  <br />
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description">
  </div>
  <br />
	<div class="form-group">
    <label for="developer">Developer</label>
    <input type="text" class="form-control" name="developer" placeholder="e.g. TiMi Studios, Proxima Beta Pte. Limited
">
  </div>
  <br />
  <div class="form-group">
    <label for="publisher">Publisher</label>
    <input type="text" class="form-control" name="publisher" placeholder="e.g. PUBG Corporation, KRAFTON, MORE">
  </div>
  <br />
  <div class="form-group">
    <label for="date">Date</label>
    <input type="date" class="form-control" name="date">
  </div>
  <br />
  <div class="form-group">
    <label for="engine">Engine</label>
    <input type="text" class="form-control" name="engine" placeholder="e.g. Unreal Engine 4">
  </div>
  <br />
  <div class="form-group">
    <label for="platform">Platform(s)</label>
    <input type="text" class="form-control" name="platform">
  </div>
  <br /> 
  <div class="form-group">
    <label for="genre">Genre</label>
    <select class="form-control" name="genre" id="genre">
		<option disabled selected> -- Choose Below -- </option>
		<option>Adventure</option>  
		<option>Puzzle</option> 
		<option>Simulation and sports</option> 
		<option>Real-time strategy</option> 
		<option>Shooter</option> 
		<option>Multiplayer online battle arena</option> 
	</select>
  </div>
  <br />
  <div class="form-group form-check">
    <input type="checkbox" class="form-check-input" name="color">
	<label for="color">Color?</label>
  </div>
  <br />
  <div class="form-group">
    <label for="image">Link for Image</label>
    <input type="text" class="form-control" name="image" placeholder="e.g. https://www.myimage.com">
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<%- include("partials/footer") %>