<%- include("partials/header") %>

<div class="container">
	<h1>
		Add New Comment
	</h1>
	<br />
	<form action="/games/<%= game._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="text">Comment Text</label>
			<textarea class="form-control" name="text" id="text" rows="8" cols="8" placeholder="Comments text here...." required><%= comment.text %></textarea>
			<br />
			<button type="submit" class="btn btn-primary">
				Submit Comment
			</button>
		</div>
	</form>
</div>

<%- include("partials/footer") %>